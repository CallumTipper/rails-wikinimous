<%= form_for(article, html: {class: :form}) do |f| %>
  <h2> <%= f.label :title, "Article Name" %></h2>
  <br>
  <%= f.text_field :title %>
  <br>
  <h2><%= f.label :content, "Article Content" %></h2>
  <br>
  <%= f.text_area :content %>
  <br>
  <% if article.persisted? %>
    <%= f.submit "Edit Article" %>
  <% else %>
    <%= f.submit "Add Article" %>
  <% end%>
<% end %>
